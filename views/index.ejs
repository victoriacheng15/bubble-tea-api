<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bubble Tea API</title>
    <link rel="stylesheet" href="/style.css" />
    <script src="/main.js" defer></script>
  </head>
  <body>
    <header>
      <h1>bubble tea home</h1>
      <nav>
        <ul>
          <li class="link"><a href="/">Home</a></li>
          <li class="link"><a href="/history">history</a></li>
          <li class="link"><a href="/leaderboard">leaderboard</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <section class="container lists">
        <div class="column teas-list">
          <h2>teas</h2>
          <ul class="list">
            <% teas.forEach(tea => { %> <% if(tea.type === "tea") {%>
            <li class="item tea" draggable="true" date-name="<%= tea.type %>">
              <%= tea.name %>
            </li>
            <% } %> <% }) %>
          </ul>
        </div>
        <div class="column toppings-list">
          <h2>toppings</h2>
          <ul>
            <% for(tea of teas) {%> <% if(tea.type === "topping") {%>
            <li
              class="item topping"
              draggable="true"
              date-type="<%= tea.type %>"
            >
              <%= tea.name %>
            </li>
            <% } %> <% } %>
          </ul>
        </div>
      </section>
      <section class="container mix-match">
        <h2>let's mix and match your favorite!</h2>
        <form class="order-box" action="/order" method="POST">
          <label for="order">drag your choice of tea and topping</label>
          <div class="btn-container">
            <button class="btn submit-btn" type="submit" disabled>
              submit your chocies
            </button>
            <button class="btn clear-btn">Clear Choices</button>
          </div>
        </form>
        <!-- https://codepen.io/victoriacheng15/pen/YzegENL?editors=1111 -->
      </section>
    </main>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <script src="/leaderboard.js" defer></script>
    <title>leaderboard</title>
  </head>
  <body>
    <header>
      <h1>bubble tea leaderboard</h1>
      <nav>
        <ul>
          <li class="link"><a href="/">Home</a></li>
          <li class="link"><a href="/history">history</a></li>
          <li class="link"><a href="/leaderboard">leaderboard</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <ul class="leaderboard">
        <% orders.forEach(order => { %>
        <li
          class="leaderboard-list standard-border"
          date-count="<%= order.count %>"
        >
          <span class="leading-background"></span>
          <span><%= order.tea %> with <%= order.topping %></span>
          <span><%= order.count %></span>
        </li>
        <% }) %>
      </ul>
    </main>
    <footer>
      Bubble Tea API is made by Victoria Cheng
      <a href="https://github.com/victoriacheng15/bubble-tea-api"
        ><ion-icon name="logo-github"></ion-icon
      ></a>
    </footer>
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
  </body>
</html>
